{
  "name": "kakapoly-store-hydrogen",
  "description": "This the default template for Hydrogen",
  "version": "0.11.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env LOCAL_DEV=true shopify hydrogen dev",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --resolve-plugins-relative-to . --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx src",
    "lint:css": "stylelint ./src/**/*.{css,sass,scss}",
    "build": "yarn build:client && yarn build:server && yarn build:worker",
    "build:client": "vite build --outDir dist/client --manifest",
    "build:server": "vite build --outDir dist/server --ssr @shopify/hydrogen/platforms/node",
    "build:worker": "cross-env WORKER=true vite build --outDir dist/worker --ssr @shopify/hydrogen/platforms/worker",
    "serve": "node --enable-source-maps dist/server",
    "test": "WATCH=true vitest",
    "test:ci": "yarn build && vitest run",
    "preview": "shopify hydrogen preview"
  },
  "prettier": "@shopify/prettier-config",
  "devDependencies": {
    "@shopify/cli": "1.0.9",
    "@shopify/cli-hydrogen": "2.0.0",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^18.0.9",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-plugin-hydrogen": "^0.12.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.2",
    "postcss": "^8.4.5",
    "prettier": "^2.3.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "vite": "^2.9.0",
    "vitest": "^0.12.9"
  },
  "dependencies": {
    "@fortawesome/pro-regular-svg-icons": "^6.1.1",
    "@headlessui/react": "^1.5.0",
    "@shopify/hydrogen": "^0.22.1",
    "body-parser": "^1.20.0",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "serve-static": "^1.14.1"
  }
}
